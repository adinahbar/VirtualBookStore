<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:layout_width="368dp"
        android:layout_height="103dp"
        android:id="@+id/book_id_of_the_opinion_opinion_dialog"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="368dp"
        android:layout_height="103dp"
        android:id="@+id/opinion_editText_opinion_dialog"
        android:hint="@string/enter_yout_opinion"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar_of_the_opinion_opinion_dialog"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_button"
        android:id="@+id/add_opinion_button_opinion_dialog"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
